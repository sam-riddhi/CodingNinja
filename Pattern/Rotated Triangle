public class Solution {
    public static void nStarTriangle(int n) {
        // Write your code here
        for (int i = 0; i < 2*n; i++)
        {
            int totalColsinRow = i > n ? 2 * n - i: i;
            for (int j = 0; j < totalColsinRow; j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
