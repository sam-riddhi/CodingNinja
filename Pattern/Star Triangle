public class Solution {
    public static void nStarTriangle(int n) {
        // Write your code here
        for (int i = 1; i <= n; i++)
        {
            for (int space = 0; space <= n - i - 1; space++)
            {
                System.out.print(" ");
            }
            for(int j = 1; j <= 2*i - 1; j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
